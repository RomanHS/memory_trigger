<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Иностранное слово -->
    <TextView
        android:id="@+id/notification_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/notif_text_color"
        android:layout_marginBottom="2dp"/>

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="34dp"
            android:text="▶"
            android:textSize="14sp"
            android:padding="0dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:backgroundTint="#6C63FF"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_priority_high"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:text=""
            android:padding="0dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5252"/>

        <Button
            android:id="@+id/btn_priority_medium"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:text=""
            android:padding="0dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD740"/>

        <Button
            android:id="@+id/btn_priority_low"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:text=""
            android:padding="0dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#69F0AE"/>

    </LinearLayout>

</LinearLayout>
